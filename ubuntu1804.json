{
  "variables": {
    "esx_host": "{{env `ESX_HOST`}}",
    "vcenter_username": "{{env `VSPHERE_USER`}}",
    "vcenter_password": "{{env `VSPHERE_PASSWORD`}}",
    "vcenter_url": "{{env `VSPHERE_URL`}}",
    "ssh_password": "{{env `SSH_PASSWORD`}}",
  },
{
  "builders": [
    {
      "type": "vsphere-iso",

      "vcenter_server":      "{{user `vcenter_url`}}",
      "username":            "{{user `vcenter_username`}}",
      "password":            "{{user `vcenter_password`}}",
      "insecure_connection": "false",

      "vm_name": "ubuntu1804-template-{{timestamp}}",
      "notes": "Built by Packer (https://github.com/cloudstrike/vsphere-templates)",
      "datacenter": "LAB",
      "cluster": "LAB",
      "host": "{{user `esx_host`}}",
      "datastore": "vDatastore2",
      "network": "SERVERS",
      "resource_pool": "Resources",

      "guest_os_type": "ubuntu64Guest",

      "ssh_username": "localtomas",
      "ssh_password": "{{user `ssh_password`}}",

      "CPUs":             1,
      "RAM":              1024,

      "convert_to_template": false,

      "disk_controller_type":  "pvscsi",
      "disk_size":        31666,
      "disk_thin_provisioned": true,

      "network_card": "vmxnet3",

      "iso_urls": "http://ucmirror.canterbury.ac.nz/linux/ubuntu-releases/bionic/ubuntu-18.04.3-live-server-amd64.iso",
      "iso_checksum": "b9beac143e36226aa8a0b03fc1cbb5921cff80123866e718aaeba4edb81cfa63",
      "iso_checksum_type": "sha256",

      "floppy_files": [
        "{{template_dir}}/preseed.cfg"
      ],
      "boot_command": [
        "<enter><wait><f6><wait><esc><wait>",
        "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
        "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
        "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
        "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
        "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
        "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
        "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
        "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
        "<bs><bs><bs>",
        "/install/vmlinuz",
        " initrd=/install/initrd.gz",
        " priority=critical",
        " locale=en_US",
        " file=/media/preseed.cfg",
        "<enter>"
      ]
    }
  ],

  "provisioners": [
    {
      "type": "shell",
      "inline": ["ls /"]
    }
  ]
}
